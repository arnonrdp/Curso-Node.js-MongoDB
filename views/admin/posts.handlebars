<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/posts/add" class="btn btn-success">Nova Postagem</a>
{{#each posts}}
<div class="card my-3">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">Descrição: {{description}}</p>
        <small class="d-block">Data: {{createdAt}}</small>
        <small class="d-block">Categoria: {{category.name}}</small>
        <a href="/admin/posts/edit/{{_id}}" class="btn btn-success">Editar</a>
        <a href="/admin/posts/delete/{{_id}}" class="btn btn-danger">Excluir</a>
    </div>
</div>
{{/each}}